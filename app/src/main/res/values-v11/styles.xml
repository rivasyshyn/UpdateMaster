<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppActionBarTheme</item>
        <item name="appButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="appButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="AppActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>
