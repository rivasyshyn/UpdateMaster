<resources>

    <!-- Base application theme. -->
    <style name="App.BaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/App.ActionBarTheme</item>
        <item name="appButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="appButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:popupMenuStyle">@style/App.PopupMenuStyle</item>
    </style>

    <style name="App.ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="App.Theme.NoTitle" parent="App.Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="App.PopupMenuStyle" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/app_menu_dropdown_panel</item>
    </style>

</resources>
