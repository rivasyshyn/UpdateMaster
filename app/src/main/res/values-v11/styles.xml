<resources>

    <!-- Base application theme. -->
    <style name="App.BaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/App.ActionBarTheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>

        <item name="appButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="appButtonBarButtonStyle">@style/ButtonStyle.Borderless</item>

        <!--<item name="android:actionDropDownStyle">@style/App.ActionDropDownStyle</item>-->
    </style>

    <style name="App.ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">?colorAccent</item>
    </style>

    <style name="App.Theme.NoTitle" parent="App.Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    
    <!--<style name="App.ActionDropDownStyle" parent="android:Widget.Holo.Spinner">-->
