<resources>

    <!-- Base application theme. -->
    <style name="App.BaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/App.ActionBarTheme</item>
        <item name="appButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="appButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:actionDropDownStyle">@style/App.ActionDropDownStyle</item>
        <item name="android:popupMenuStyle">@style/App.PopupStyle</item>
    </style>

    <style name="App.ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="App.Theme.NoTitle" parent="App.Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    
    <style name="App.ActionDropDownStyle" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@color/accent_dark</item>
        <item name="android:popupBackground">@color/accent_dark</item>
    </style>

    <style name="App.PopupStyle" parent="android:Widget.Holo.PopupMenu">
        <item name="android:background">@color/accent_dark</item>
        <item name="android:popupBackground">@color/accent_dark</item>
    </style>

</resources>
