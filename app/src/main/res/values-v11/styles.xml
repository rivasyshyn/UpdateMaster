    <!--</style>-->

    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">?colorAccentLight</item>
        <!--<item name="android:background">?colorAccent</item>-->
    </style>

    <style name="DropDownNav.Example" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">?colorAccentLight</item>
        <!--<item name="android:background">?colorAccent</item>-->
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:textColor">?colorAccentDark</item>
    </style>

    <style name="ButtonStyle.Borderless" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="App.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
    </style>

